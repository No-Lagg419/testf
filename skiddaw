-- üê≤ Grow a Garden Pet Scaler with GUI (40KG baseline)
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerName = player.Name
local BASE_KG = 40 -- 40KG = perfect look

-- Base proportions para hindi magbago shape
local BODY_BASE   = Vector3.new(1, 6, 1)
local WINGS_BASE  = Vector3.new(3, 1, 3)
local TAIL_BASE   = Vector3.new(2, 2, 2)

-- Function to scale pets inside Workspace.<playerName>
local function scalePet(scaleFactor)
    local playerFolder = workspace:FindFirstChild(playerName)
    if not playerFolder then warn("‚ö† Player folder not found.") return end

    for _, obj in ipairs(playerFolder:GetDescendants()) do
        if obj:IsA("MeshPart") then
            obj.Size = Vector3.new(
                BODY_BASE.X * scaleFactor,
                BODY_BASE.Y * scaleFactor,
                BODY_BASE.Z * scaleFactor
            )
        elseif obj:IsA("SpecialMesh") then
            local name = obj.Parent.Name:lower()
            if name:find("body") then
                obj.Scale = BODY_BASE * scaleFactor
            elseif name:find("wing") then
                obj.Scale = WINGS_BASE * scaleFactor
            elseif name:find("tail") then
                obj.Scale = TAIL_BASE * scaleFactor
            else
                obj.Scale = obj.Scale * scaleFactor
            end
        end
    end
    print("‚úÖ Pets scaled x"..scaleFactor)
end

-- Function to reset pet to default proportions
local function resetPet()
    scalePet(1)
end

-- GUI
local gui = Instance.new("ScreenGui", player.PlayerGui)
gui.ResetOnSpawn = false

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 220, 0, 160)
frame.Position = UDim2.new(1, -230, 0.4, 0)
frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 8)

local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0, 30)
title.BackgroundTransparency = 1
title.Text = "Pet Scaler"
title.Font = Enum.Font.GothamBold
title.TextSize = 16
title.TextColor3 = Color3.fromRGB(255, 255, 255)

-- KG input
local inputKG = Instance.new("TextBox", frame)
inputKG.Size = UDim2.new(1, -20, 0, 30)
inputKG.Position = UDim2.new(0, 10, 0, 40)
inputKG.PlaceholderText = "Enter KG"
inputKG.Text = ""
inputKG.Font = Enum.Font.Gotham
inputKG.TextSize = 14
inputKG.TextColor3 = Color3.new(0, 0, 0)
Instance.new("UICorner", inputKG).CornerRadius = UDim.new(0, 6)

-- Manual scale input
local inputScale = Instance.new("TextBox", frame)
inputScale.Size = UDim2.new(1, -20, 0, 30)
inputScale.Position = UDim2.new(0, 10, 0, 80)
inputScale.PlaceholderText = "Manual Scale (e.g. 2)"
inputScale.Text = ""
inputScale.Font = Enum.Font.Gotham
inputScale.TextSize = 14
inputScale.TextColor3 = Color3.new(0, 0, 0)
Instance.new("UICorner", inputScale).CornerRadius = UDim.new(0, 6)

-- Buttons
local btnKG = Instance.new("TextButton", frame)
btnKG.Size = UDim2.new(1, -20, 0, 30)
btnKG.Position = UDim2.new(0, 10, 0, 120)
btnKG.BackgroundColor3 = Color3.fromRGB(255, 200, 0)
btnKG.Text = "Apply KG Scale"
btnKG.Font = Enum.Font.GothamBold
btnKG.TextSize = 14
btnKG.TextColor3 = Color3.new(0, 0, 0)
Instance.new("UICorner", btnKG).CornerRadius = UDim.new(0, 6)

local btnManual = btnKG:Clone()
btnManual.Text = "Apply Manual Scale"
btnManual.Position = UDim2.new(0, 10, 0, 155)
btnManual.Parent = frame

local btnReset = btnKG:Clone()
btnReset.Text = "Reset Size"
btnReset.Position = UDim2.new(0, 10, 0, 190)
btnReset.Parent = frame

-- Events
btnKG.MouseButton1Click:Connect(function()
    local kgValue = tonumber(inputKG.Text)
    if kgValue then
        local scaleFactor = kgValue / BASE_KG
        scalePet(scaleFactor)
    else
        warn("‚ö† Enter valid KG")
    end
end)

btnManual.MouseButton1Click:Connect(function()
    local scaleValue = tonumber(inputScale.Text)
    if scaleValue then
        scalePet(scaleValue)
    else
        warn("‚ö† Enter valid scale value")
    end
end)

btnReset.MouseButton1Click:Connect(function()
    resetPet()
end)
